<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:padding="@dimen/size_padding_normal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/imv_product"
                android:layout_width="150dp"
                android:layout_height="200dp"/>
        <LinearLayout
                android:layout_marginLeft="@dimen/size_margin_normal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/imv_tiki_now"
                    android:layout_marginBottom="@dimen/size_margin_normal"
                    android:src="@drawable/tiki_now"
                    android:layout_width="@dimen/tiki_now_width"
                    android:layout_height="@dimen/tiki_now_height"/>
            <TextView
                    android:id="@+id/tv_name"
                    android:layout_marginBottom="@dimen/size_margin_normal"
                    android:text="Điện thoại Nokia 230 Dual Sim - Hàng chính hãng"
                    android:textSize="15sp"
                    android:textColor="@color/color_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:layout_marginBottom="@dimen/size_margin_normal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/tv_price"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="327.000đ"
                        android:textColor="@color/color_black"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/tv_discount"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/size_margin_short"
                        android:textColor="@color/color_black"
                        android:text="-19%"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/lnl_fast_delivery"
                    android:layout_marginBottom="@dimen/size_margin_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_fast_delivery"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>
                <TextView
                        android:id="@+id/tv_fast_delivery"
                        android:layout_marginStart="3dp"
                        android:layout_gravity="center"
                        android:textColor="@color/color_green"
                        android:text="Giao Nhanh 2h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                    android:id="@+id/tv_option_color"
                    android:layout_marginBottom="@dimen/size_margin_normal"
                    android:background="@drawable/custom_background_textview_option_color"
                    android:text="Nhiều màu"
                    android:textColor="@color/color_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:id="@+id/lnl_rating"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <RatingBar
                        android:layout_gravity="center"
                        android:id="@+id/rtb_rating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:backgroundTint="#fdd835"
                        android:progressTint="#fdd835"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginStart="@dimen/size_margin_short"
                        android:textSize="13sp"
                        android:layout_gravity="center"
                        android:text="(7)"
                        android:textColor="@color/color_gray"
                        android:id="@+id/tv_review_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_spacing"/>
</LinearLayout>