<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/color_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.main.MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                android:background="@color/color_main"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_width="50dp"
                        android:id="@+id/imv_back"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:padding="12.5dp"
                        android:src="@drawable/ic_back"
                        android:layout_height="50dp"/>
                <LinearLayout
                        android:layout_toLeftOf="@+id/lnl_action"
                        android:layout_marginBottom="@dimen/size_margin_normal"
                        android:layout_marginTop="@dimen/size_margin_normal"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/imv_back"
                        android:background="@drawable/custom_background_search"
                        android:orientation="horizontal">
                    <ImageView
                            android:src="@drawable/ic_search_gray"
                            android:layout_marginRight="@dimen/size_margin_normal"
                            android:layout_marginLeft="@dimen/size_margin_normal"
                            android:layout_width="@dimen/size_icon_normal"
                            android:layout_gravity="center_vertical"
                            android:layout_height="@dimen/size_icon_normal"/>
                    <EditText
                            android:id="@+id/edt_search"
                            android:hint="@string/hint_search"
                            android:ellipsize="end"
                            android:textSize="14sp"
                            android:singleLine="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/lnl_action"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                    <RelativeLayout
                            android:id="@+id/rl_cart"
                            android:layout_width="50dp"
                            android:layout_height="50dp">
                        <ImageView
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_shopping_cart"
                                android:layout_width="@dimen/size_icon_normal"
                                android:layout_height="@dimen/size_icon_normal"/>
                        <TextView
                                android:id="@+id/tv_cart_count"
                                android:gravity="center"
                                android:text="10"
                                android:textSize="12sp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/custom_badge_cart"
                                android:layout_width="20dp"
                                android:textColor="@color/color_white"
                                android:layout_height="20dp"/>
                    </RelativeLayout>

                    <ImageView
                            android:layout_width="50dp"
                            android:id="@+id/imv_more"
                            android:padding="12.5dp"
                            android:src="@drawable/ic_more"
                            android:layout_height="50dp"/>
                </LinearLayout>

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
        <LinearLayout
                android:background="@color/color_white"
                android:padding="@dimen/size_padding_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <LinearLayout
                    android:layout_marginStart="@dimen/size_margin_normal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <ImageView
                        android:src="@drawable/ic_sort"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                <TextView
                        android:layout_marginStart="@dimen/size_margin_normal"
                        android:layout_gravity="center"
                        android:text="@string/sort"
                        android:textColor="@color/color_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/tv_sort"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/color_main"
                        android:text="Chọn lọc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                    android:layout_marginEnd="@dimen/size_margin_normal"
                    android:layout_marginStart="@dimen/size_margin_normal"
                    android:background="@color/color_spacing"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>
            <LinearLayout
                    android:id="@+id/lnl_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        android:src="@drawable/ic_filter"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                <TextView
                        android:layout_marginStart="@dimen/size_margin_normal"
                        android:layout_gravity="center"
                        android:text="@string/filter"
                        android:textColor="@color/color_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/tv_filter_count"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/color_main"
                        android:text="(2)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_spacing"/>
        <LinearLayout
                android:background="@color/color_white"
                android:padding="@dimen/size_padding_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <LinearLayout
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/size_margin_normal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <ImageView
                        android:src="@drawable/ic_location"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>
                <TextView
                        android:id="@+id/tv_address"
                        android:text="Phường Tân Định, Quận 1, Hồ Chí Minh"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginStart="@dimen/size_margin_normal"
                        android:layout_gravity="center"
                        android:textColor="@color/color_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                    android:layout_marginEnd="@dimen/size_margin_normal"
                    android:layout_marginStart="@dimen/size_margin_normal"
                    android:background="@color/color_spacing"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>
            <LinearLayout
                    android:id="@+id/lnl_tiki_now"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/size_margin_normal"
                        android:src="@drawable/tiki_now"
                        android:layout_width="@dimen/tiki_now_width"
                        android:layout_height="@dimen/tiki_now_height"/>

                <CheckBox
                        android:id="@+id/ckb_tiki_now"
                        android:layout_gravity="center"
                        android:buttonTint="@color/color_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_spacing"/>
        <android.support.v7.widget.RecyclerView
                android:background="@color/color_white"
                android:id="@+id/rcv_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>